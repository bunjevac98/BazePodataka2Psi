<Window x:Class="BendAplikacija.NagradaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BendAplikacija"
        mc:Ignorable="d"
        Title="NagradaView" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <DataGrid SelectionChanged="DataGridNagrada_SelectionChanged" Name="DataGridNagrada" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="222" Margin="10,10,0,0" VerticalAlignment="Top" Width="774"/>
        <Label Content="NazNag" HorizontalAlignment="Left" Margin="61,347,0,0" VerticalAlignment="Top" Height="40" Width="100"/>
        <TextBox Name="TextBoxNazNag" HorizontalAlignment="Left" Height="40" Margin="318,347,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="683,266,0,0" VerticalAlignment="Top" Width="75" Height="29" Click="Add_Click"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="683,322,0,0" VerticalAlignment="Top" Width="75" Height="29" Click="Update_Click"/>
        <Button Content="Remove" HorizontalAlignment="Left" Margin="683,381,0,0" VerticalAlignment="Top" Width="75" Height="29" Click="Delete_Click"/>
    </Grid>
</Window>
